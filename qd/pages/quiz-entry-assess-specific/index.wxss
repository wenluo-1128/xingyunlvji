/* WXSS */
.container {
    width: 100%;
    padding: 20rpx;
    background-color: #f8f8f8;
}

.header {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: 40rpx;
    border-bottom: 1rpx solid #e0e0e0;
    padding-bottom: 20rpx;
    background-color: #fff; /* 头部背景白色 */
}

.title {
    font-size: 32rpx;
    color: #666;
    margin-bottom: 10rpx;
}

.avatar {
    width: 240rpx;
    height: 240rpx;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 10rpx;
    border: 20rpx solid #fff;
    box-sizing: border-box;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.avatar image {
    width: 100%;
    height: 100%;
}

.name {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
}

.tags {
    display: flex;
    gap: 20rpx;
    flex-wrap: wrap;
    justify-content: center;
}

.tag {
    padding: 8rpx 20rpx;
    background-color: #f0f0f0;
    border-radius: 20rpx;
    font-size: 28rpx;
    color: #333;
}

.form-container {
    background-color: #fff;
    border-radius: 16rpx;
    padding: 20rpx 20rpx; /* 左右间隔 10rpx */
}

.form-item {
    margin-bottom: 20rpx;
}

.form-label {
    font-size: 32rpx;
    color: #333;
    margin-bottom: 15rpx;
    display: block;
}

.option-group {
    display: flex;
    flex-wrap: wrap;
    gap: 15rpx;
}

.option {
    padding: 12rpx 24rpx;
    background-color: #f8f8f8;
    border-radius: 24rpx;
    font-size: 28rpx;
    color: #333;
}

.option.selected {
    background-color: #96DED1 !important;
}

.star-group {
    display: flex;
    gap: 10rpx;
}

.star {
    font-size: 40rpx;
    color: #ccc;
}

.star.active {
    color: #96DED1;
}

.textarea {
    width: 100%;
    height: 120rpx;
    border: 1rpx solid #e0e0e0;
    border-radius: 16rpx;
    padding: 16rpx;
    font-size: 28rpx;
    margin-top: 10rpx;
}    

.button {
    margin: 30rpx;
    width: 100%;
    height: 100rpx;
    line-height: 60rpx; 
    font-size: 20px;
    color: black;
    background-color: #96DED1;
    border-radius: 30px; 
    display: flex; 
    justify-content: center; 
    align-items: center; 
  }