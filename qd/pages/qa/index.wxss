.container {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 20px;
  }
  
  .header {
    font-size: 20px;
    margin-bottom: 20px;
    border-bottom: 1px solid #ccc; /* 添加分隔线 */
    padding-bottom: 10px;
  }
  
  .tabs {
    display: flex;
    justify-content: space-around;
    width: 100%;
    margin-bottom: 20px;
  }
  
  .active-tab {
    background-color: #96DED1;
    color: white;
  }
  
  .content {
    text-align: center;
    margin-top: 100px; /* 调整提示信息的位置 */
  }
  
  .no-content {
    display: block;
    font-size: 24px;
    margin-bottom: 10px;
    color: #999;
  }
  
  .prompt {
    display: block;
    font-size: 16px;
    color: #999;
  }