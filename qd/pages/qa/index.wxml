<view class="container">
  <view class="tabs">
    <button class="{{selectedTab === 'reviewed' ? 'active-tab' : ''}}" bindtap="switchTab" data-tab="reviewed" >我的提问</button>
    <button class="{{selectedTab === 'unreviewed' ? 'active-tab' : ''}}" bindtap="switchTab" data-tab="unreviewed">我的回答</button>
  </view>
  <view class="content">
    <block wx:if="{{selectedTab === 'reviewed'}}">
      <view wx:if="{{reviewed.length === 0}}">
        <text class="no-content">暂无内容</text>
        <text class="prompt">小云期待你的问答</text>
      </view>
      <view wx:else>
        <!-- 这里可以添加已点评的内容 -->
        <view wx:for="{{reviewed}}" wx:key="index">
          <text>{{item.content}}</text>
        </view>
      </view>
    </block>
    <block wx:if="{{selectedTab === 'unreviewed'}}">
      <view wx:if="{{unreviewed.length === 0}}">
        <text class="no-content">暂无内容</text>
        <text class="prompt">你还没有回答任何内容</text>
      </view>
      <view wx:else>
        <!-- 这里可以添加未点评的内容 -->
        <view wx:for="{{unreviewed}}" wx:key="index">
          <text>{{item.name}}</text>
        </view>
      </view>
    </block>
  </view>
</view>