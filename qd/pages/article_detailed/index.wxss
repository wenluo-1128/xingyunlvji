/* WXSS */
.container {
  padding: 30rpx;
  background-color: #fff;
}

.title {
  font-size: 36rpx;
  color: #2c3e50;
  margin-bottom: 20rpx;
  line-height: 1.2;
}

.meta-container {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.author, .date, .location {
  font-size: 24rpx;
  color: #7f8c8d;
}

.divider {
  margin: 0 10rpx;
  color: #bdc3c7;
}

.content text {
  font-size: 28rpx;
  line-height: 1.6;
  color: #34495e;
  display: block;
  margin-top: 10rpx;
  white-space: pre-wrap;
  word-wrap: break-word; 
  overflow: visible;
}