/* 容器样式 */
.container {
    background-color: #f5f5f5;
  }
  
  /* 标题样式 */
  .title {
    width: 100%;
    background-color: #96DED1;
    text-align: center;
    font-size: 36rpx;
    font-weight: bold;
    padding-top: 25rpx;
    padding-bottom: 25rpx;
    box-sizing: border-box;
  }
  
  /* 统一的区块样式（好评榜、反馈系统、热门文章） */
  .goodratinglist,
  .feedbacksystem,
  .hotarticles {
    margin-top: 20rpx;
    background-color: #fff;
    border-radius: 50rpx;
    padding: 20rpx;
    margin-left: 48rpx;
    margin-right: 48rpx;
  }
  
  /* 好评榜标题样式 */
  .goodratingtitle {
    font-size: 35rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
    margin-left: auto;
    margin-right: auto;
    width: fit-content;
  }
  
  /* 好评榜内容布局 */
  .ratingitems {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
  }
  
  .ratingitem {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 35rpx;
  }
  
  .circle {
    width: 130rpx;
    height: 130rpx;
    border: 1rpx solid #000;
    border-radius: 50%;
    margin-bottom: 10rpx;
  }
  
  .ranknumber {
    font-size: 30rpx;
  }
  
  /* 反馈系统标题样式 */
  .feedbacktitle {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  .feedbackcontent {
    height: 130rpx;
    margin: 0 0rpx;
  }

  .assess{
      padding: 40rpx 185rpx;
      border-radius: 50rpx;
      box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  }
  
  /* 热门文章标题样式 */
  .hotarticlestitle {
    font-size: 30rpx;
    font-weight: bold;
    margin-bottom: 20rpx;
  }
  
  /* 热门文章内容布局 */
  .articleitems {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
  }
  
  .content-wrapper {
    width: 90%;
    margin: 10rpx 0;
  }
  
  /* 卡片样式 */
  .rounded-block {
    width: 100%;
    height: 120rpx;
    background-color: white;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.4);
    display: flex;
    align-items: center;
    padding: 2%;
  }
  
  .photo-container {
    width: 25%;
    height: 100%;
    overflow: hidden;
    position: relative;
  }
  
  .photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10rpx;
  }
  
  .photo-text {
    position: absolute;
    font-weight: bold;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 35rpx;
    z-index: 1;
  }
  
  .divider {
    width: 1rpx;
    height: 80rpx;
    background-color: #ccc;
    margin: 0 10rpx;
  }
  
  .content-container {
    width: 69%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .title-container {
    width: 100%;
    height: 30%;
    display: flex;
    align-items: center;
    padding-left: 10rpx;
  }
  
  .title {
    font-weight: bold;
    font-size: 32rpx;
  }
  
  .content-sub-container {
    width: 100%;
    height: 70%;
    display: flex;
    align-items: center;
    padding-left: 10rpx;
  }
  
  .content {
    font-size: 28rpx;
    color: #666;
  }
  
  .title1 {
    width: 100%;
    font-size: 36rpx;
    font-weight: bold;
    padding-top: 25rpx;
    padding-bottom: 25rpx;
    box-sizing: border-box;
  }
  
  /* 草稿列表容器 */
  .draft-list {
    padding: 20rpx;
  }
  
  /* 图片上传区域样式 */
  .image-container {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    padding: 20rpx;
  }
  
  .image-wrapper {
    position: relative;
    width: 150rpx;
    height: 150rpx;
  }
  
  .image-item {
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
  }
  
  .upload-btn {
    width: 150rpx;
    height: 150rpx;
    background-color: #f0f0f0;
    border: 2rpx dashed #ccc;
    border-radius: 10rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .upload-icon {
    width: 50rpx;
    height: 50rpx;
  }
  
  .delete-btn {
    position: absolute;
    top: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.5);
    color: white;
    font-size: 24rpx;
    width: 40rpx;
    height: 40rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
  }
  
  .delete-icon {
    font-size: 20rpx;
  }
  
  /* 按钮样式 */
  .button-container {
    display: flex;
    justify-content: space-around;
    margin-top: 20rpx;
  }
  
  .custom-button {
    width: 45%;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #96DED1;
    color: white;
    font-size: 30rpx;
    border-radius: 50rpx;
    text-align: center;
  }

 