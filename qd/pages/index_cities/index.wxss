/* 页面全局样式 */
page {
    height: 100%;
    overflow: hidden; /* 防止滚动条出现 */
  }

  .nav-item.active {
    position: relative; /* 为伪元素定位 */
  }
  
  /* 左侧圆点样式 */
  .nav-item.active::before {
    content: '';
    position: absolute;
    left: -20rpx; /* 调整点的位置到左侧 */
    top: 50%;
    transform: translateY(-50%);
    width: 16rpx;
    height: 16rpx;
    background-color: #96DED1;
    border-radius: 50%;
  }
  
  /* 外层容器 */
  .page-container {
    position: relative;
    height: 100%;
  }
  
  /* 背景图片容器（移除路径定义） */
  .background-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    z-index: -1; /* 放在内容下方 */
    filter: blur(2rpx); /* 可选：添加轻微模糊效果 */
  }
    
  /* 顶部导航 */
  .top-nav {
    display: flex;
    justify-content: center;
    gap: 30rpx;
    margin: 20rpx 0 20rpx 0;
  }

  .nav-item {
    font-size: 40rpx;
    color: #f6f6f6;
    margin: 0 45rpx;
  }

  /* 内容容器 */
  .content-container {
    height: 85%;
    position: relative;
    z-index: 1;
    padding: 20rpx;
    border-radius: 40rpx;
    background: rgba(255, 255, 255, 0.8); /* 半透明遮罩，提升文字可读性 */
    margin: 20rpx 25rpx;
  }
  
  /* 原有样式保持不变 */
  .container {
    height: 100%;
    padding: 20rpx;
    border-radius: 40rpx;
  }
  
  /* 云南主体内容 */
  .yunnan-content {
    display: flex;
    margin-bottom: 20rpx;
  }
  
  .yunnan-img {
    width: 350rpx;
    height: 280rpx;
    border-radius: 20rpx;
  }
  
  .yunnan-info {
    padding: 20rpx;
  }
  
  .title {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
  }
  
  .desc {
    font-size: 28rpx;
    color: #999;
    margin-top: 10rpx;
  }
  
  /* 功能按钮 */
  .function-btns {
    display: flex;
    justify-content: center;
    gap: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .custom-btn {
    width: 150rpx;
    padding: 12rpx 10rpx;
    background: #f5f5f5;
    border: 1rpx solid #ddd;
    border-radius: 20rpx;
    font-size: 30rpx;
    color: #333;
    text-align: center; /* 水平居中 */
    display: block; /* 确保是块级元素 */
  }
  
  /* 热门景点 */
  .scenic-list {
    border-radius: 20rpx;
    padding: 20rpx;
  }
  
  .section-title {
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
  }
  
  .scenic-item {
    display: flex;
    align-items: flex-start;
    gap: 20rpx;
    margin-bottom: 20rpx;
  }
  
  .scenic-img {
    width: 240rpx;
    height: 160rpx;
    border-radius: 10rpx;
  }
  
  .scenic-info {
    flex: 1;
  }
  
  .scenic-name {
    font-size: 34rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 10rpx;
  }
  
  .score-info {
    display: flex;
    align-items: center;
    gap: 10rpx;
    margin-bottom: 10rpx;
  }
  
  .level-tag {
    padding: 4rpx 10rpx;
    background: #5cdbd3;
    color: white;
    border-radius: 4rpx;
    font-size: 24rpx;
  }
  
  .scenic-desc {
    font-size: 28rpx;
    color: #666;
  }
  
  .star-icon {
    width: 80rpx;
    height: 80rpx;
  }

  .empty-content {
    font-size: 50rpx;
    text-align: center;
    color: #999;
    margin-top: 300rpx;
  }