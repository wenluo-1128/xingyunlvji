.container {
  padding: 40rpx;
  height: 100vh;
  background-color: #f5f5f5;
}

.form-box {
  background: #fff;
  width: 80%;
  padding: 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
}

.input-group {
  margin-bottom: 30rpx;
}

input {
  height: 80rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.btn {
  margin: 40rpx 0;
  background-color: #96ded1;
  color: white;
  border-radius: 40rpx;
}

.switch-form {
  display: flex;
  justify-content: center;
  font-size: 26rpx;
  color: #666;
}

.link {
  color: #96ded1;
  margin-left: 10rpx;
}

.avatar-box {
  align-items: center;
  padding: 20rpx 0;
}

.avatar-picker {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  border: 2rpx solid #eee;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #666;
  font-size: 24rpx;
}

.upload-btn .icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
  color: #96ded1;
}