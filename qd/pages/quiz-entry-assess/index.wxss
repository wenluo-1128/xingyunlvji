.container {
    padding: 20rpx;
    padding-bottom: 0;
    background: #ffffff;
  }
  .employee-count {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
    text-align: left;
    margin-right: auto;
  }    
  .tab-bar {
    display: flex;
    justify-content: center;
    border-bottom: none; 
  }
  .tab-item {
    padding: 10rpx 20rpx;
    font-size: 28rpx;
    color: #666;
    margin: 0 10rpx;
  }
  .tab-item.active {
    color: #96DED1;
    border-bottom: 4rpx solid #96DED1;
  }
  .customizer-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 10rpx 30rpx;
  }
  .customizer-card {
    width: 40%;
    background: #fff;
    border-radius: 20rpx;
    padding: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  }
  .avatar{
    width: 100%;
    height: 260rpx;
    background: #eee;
    margin-bottom: 15rpx;
  }
  .avatar-image {
    width: 98%;
    height: 250rpx;
    border-radius: 50%;
    margin: 5rpx 2rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  }
  .name {
    text-align: center;
    font-size: 28rpx;
    color: #666;
  }
    