/* 基础样式 */
.container {
    padding: 20rpx 32rpx;
    background: #f5f5f5;
  }
  
  /* 顶部导航 */
  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 40rpx;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    margin: 0rpx 50rpx 0 50rpx;
  }

  .title.active {
    color: #96DED1;
    font-weight: bold;
    position: relative;
  }
  
  .title.active::after {
    content: '';
    position: absolute;
    bottom: -10rpx;
    left: 50%;
    transform: translateX(-50%);
    width: 80rpx;
    height: 8rpx;
    background: #96DED1;
    border-radius: 4rpx;
  }
  
  .empty-content {
    font-size: 50rpx;
    text-align: center;
    color: #999;
    margin-top: 300rpx;
  }

  /* 搜索栏 */
  .search-container {
    padding: 0rpx 32rpx;
    display: flex;
    margin-bottom: 20rpx;
  }
  
  .search-input {
    flex: 0.8;
    height: 80rpx;
    padding: 0 30rpx;
    background: #fff;
    border-radius: 40rpx 0 0 40rpx;
  }
  
  .search-btn {
    flex: 0.2;
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #96DED1;
    color: white;
    border-radius: 0 40rpx 40rpx 0;
    font-size: 28rpx;
    padding: 0;
    line-height: 1;
  }
  
  /* 猜你想去 */
  .guess-section {
    padding:  0 20rpx !important;
    margin-bottom: 20rpx;
  }
  
  .guess-header {
    padding: 0rpx 320rpx;
    display: flex;
    align-items: center;
    padding: 30rpx;
    background: #fff;
    border-radius: 16rpx;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    min-width: 160rpx;
    margin-right: 20rpx;
  }
  
  .guess-scroll {
    flex: 1;
    white-space: nowrap;
  }
  
  .guess-list {
    display: inline-block;
    padding-left: 20rpx;
  }
  
  .guess-item {
    display: inline-block;
    padding: 20rpx 40rpx;
    background: #f5f5f5;
    border-radius: 40rpx;
    margin-right: 20rpx;
    font-size: 28rpx;
    transition: all 0.2s;
  }
  
  .guess-item:active {
    transform: scale(0.95);
    opacity: 0.8;
  }

  /* ai助手 */
  .banner {
    margin-left: 3%;
    width: 94%;
  }

  .banner-image {
    width: 100%;
    height: 150rpx;
  }

  .banner-text {
    position: absolute;
    font-size: 30rpx;
    font-weight: 1000;
    color: white;
  }
  
  /* 热门目的地 */
  .category-scroll {
    margin: 20rpx 0;
  }
  
  .category-tabs {
    display: flex;
    padding: 0 30rpx;
  }
  
  .category-tab {
    padding: 20rpx 40rpx;
    font-size: 28rpx;
    color: #666;
    white-space: nowrap;
    border-bottom: 4rpx solid transparent;
  }
  
  .category-tab.active {
    color: #96DED1;
    border-color: #96DED1;
  }
  
  .city-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
    padding: 30rpx;
  }
  
  .city-card {
    position: relative;
    border-radius: 16rpx;
    overflow: hidden;
    height: 320rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  
  .city-image {
    width: 100%;
    height: 100%;
  }
  
  .city-name {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 24rpx;
    font-size: 32rpx;
    color: #fff;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.6));
  }
  
  /* 搜索结果 */
  .search-result {
    padding: 0rpx 20rpx;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: white;
    z-index: 999;
  }
  
  .result-header {
    display: flex;
    align-items: center;
    padding: 40rpx;
    border-bottom: 2rpx solid #eee;
  }
  
  .back-btn {
    color: #96DED1;
    margin-right: 30rpx;
  }
  
  .empty-tip {
    text-align: center;
    color: #999;
    padding: 25rpx 0rpx;
    margin: 50% 0%;
  }